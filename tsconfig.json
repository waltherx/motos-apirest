{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "allowJs": false,
    "module": "CommonJS",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"]
  },
  /*"ts-node": {
    "esm": true
  },*/
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
