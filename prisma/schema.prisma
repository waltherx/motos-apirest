// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int       @id @default(autoincrement())
  username   String    @unique
  realname   String?   @db.VarChar(250)
  password   String    @db.VarChar(2000)
  email      String    @unique
  phone      String?   @unique
  status     Int
  token      String?
  created_at DateTime  @default(now())
  update_at  DateTime? 
  roles      Role[]
}

model Client {
  id         Int       @id @default(autoincrement())
  ci         Int       @unique
  fullname   String    @db.VarChar(350)
  address    String?   @db.VarChar(250)
  phone      String?   @db.VarChar(20)
  status     Int
  motos      Moto[]
  created_at DateTime  @default(now())
  update_at  DateTime? 
}

model Role {
  id         Int       @id @default(autoincrement())
  name       String    @unique @db.VarChar(20)
  sequence   String?   @db.VarChar(50)
  memo       String?   @db.VarChar(50)
  status     Int
  created_at DateTime  @default(now())
  update_at  DateTime? @updatedAt
  user       User      @relation(fields: [user_id], references: [id])
  user_id     Int
  menus      Menu[]
}

model Menu {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(20)
  sequence Int?
  role     Role   @relation(fields: [role_id], references: [id])
  role_id   Int
}

model Moto {
  id            Int        @id @default(autoincrement())
  marca         String?    @db.VarChar(100)
  modelo        String     @db.VarChar(100)
  anio          Int?
  placa         String     @db.VarChar(15)
  motor         String?    @db.VarChar(10)
  color         String?    @db.VarChar(10)
  peso          Decimal?   @db.Decimal(10, 2)
  kilometraje   Decimal?   @db.Decimal(10, 2)
  estado        String?     @db.VarChar(50)
  fecha_compra  DateTime
  precio_compra Decimal    @db.Decimal(10, 2)
  client        Client     @relation(fields: [client_id], references: [id])
  client_id      Int
  positions     Position[]
}

model Position {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  latitude  Decimal  @db.Decimal(9, 6)
  longitude Decimal  @db.Decimal(9, 6)
  moto      Moto     @relation(fields: [moto_id], references: [id])
  moto_id    Int
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_DEV")
}
