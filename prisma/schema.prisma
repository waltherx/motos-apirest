// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  realname   String
  password   String
  email      String   @unique
  phone      String   @unique
  status     Int
  token      String
  created_at DateTime @default(now())
  update_at  DateTime @updatedAt
  roles      Role[]
}

model Client {
  id         Int      @id @default(autoincrement())
  ci         Int      @unique
  fullname   String
  address    String
  phone      String
  status     Int
  motos      Moto[]
  created_at DateTime @default(now())
  update_at  DateTime @updatedAt
}

model Role {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  sequence   String
  memo       String
  status     Int
  created_at DateTime @default(now())
  update_at  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  menus      Menu[]
}

model Menu {
  id       Int    @id @default(autoincrement())
  name     String
  sequence Int
  role     Role   @relation(fields: [roleId], references: [id])
  roleId   Int
}

model Moto {
  id            Int        @id @default(autoincrement())
  marca         String
  modelo        String
  anio          Int
  placa         String
  motor         String
  color         String
  peso          Decimal
  kilometraje   Decimal
  estado        String
  fecha_compra  DateTime
  precio_compra Decimal
  client        Client     @relation(fields: [clientId], references: [id])
  clientId      Int
  positions     Position[]
}

model Position {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  latitude  Decimal
  longitude Decimal
  moto      Moto     @relation(fields: [motoId], references: [id])
  motoId    Int
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_DEV")
}
